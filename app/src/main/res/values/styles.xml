<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="keyboard_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="separator_horizontal">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="separator_horizontal.accent">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="separator_vertical">
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="separator_vertical.accent">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="pin_digit">
        <item name="android:layout_width">@dimen/pin_dot_size</item>
        <item name="android:layout_height">@dimen/pin_dot_size</item>
        <item name="android:background">@drawable/ic_circle_accent</item>
    </style>

    <style name="default_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_material_base</item>
        <item name="android:padding">@dimen/margin_material_base</item>
    </style>

    <style name="dashboard_account_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginTop">@dimen/margin_material_base</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
