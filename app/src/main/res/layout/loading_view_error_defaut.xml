<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textLoadingViewErrorMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_material_2x"
        android:gravity="center"
        android:text="@string/loading_view_default_error"
        app:layout_constraintBottom_toTopOf="@+id/buttonLoadingViewErrorReload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLoadingViewErrorReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_material_base"
        android:layout_marginBottom="@dimen/margin_material_2x"
        android:text="@string/loading_view_default_reload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textLoadingViewErrorMessage"
        app:layout_constraintStart_toStartOf="@+id/textLoadingViewErrorMessage"
        app:layout_constraintTop_toBottomOf="@+id/textLoadingViewErrorMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>